{% extends 'base.html.twig' %}
{% import 'macros.html.twig' as macro %}
{% block title %}{{ macro.title('Annotations du projet ' ~ project.name) }}

{% endblock %}
{% block body %}
    <div class="my-2">
        <div class="row">
            <div class="col-6">
                <a href="{{ path('user_view_project', {id: project.id}) }}"
                   class="text-decoration-none">
                    <i class="bi-chevron-left"></i>
                    {{ project.name }}
                </a>
            </div>
        </div>
    </div>

    <div class="d-flex align-items-center">
        <h1>Annotations</h1>
        <div class="ms-auto">
            <a href="{{ path('download_annotations', {id: project.id}) }}" class="btn btn-primary">
                <i class="bi-download me-2"></i>Télécharger CSV
            </a>
            <a href="{{ path('download_annotations_md', {id: project.id}) }}" id="dlAnnotationMdBtn" class="btn btn-primary">
                <i class="bi-download me-2"></i>Sélection vers Markdown
            </a>
        </div>
    </div>

    {% include('annotation/index.html.twig') with {
        project: project,
        document: null,
        tagTree: tagTree,
        annotationsByTag: annotationsByTag,
        authors: authors,
    } only %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('annotation') }}
{% endblock %}