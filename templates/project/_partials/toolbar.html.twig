<div class="row g-2 mt-1 mb-4">
    {% if canEdit %}
        {#
        <div class="col-auto">
            <a href="{{ path('user_document_new', {id:project.id}) }}"
               role="button"
               class="btn btn-primary">
                <i class="bi-plus me-2"></i>Nouveau
            </a>
        </div>
        #}
        <div class="col-auto">
            <button class="btn btn-outline-danger d-none"
                    type="button"
                    id="deleteSelected"
                    data-bs-toggle="modal"
                    data-bs-target="#confirmDeleteModal"
                    disabled>
                <i class="bi-trash"></i>
            </button>
        </div>
        <div class="col-auto">
            <button class="btn btn-primary"
                    type="button"
                    data-bs-toggle="modal"
                    data-bs-target="#importDocumentModal">
                <i class="bi-folder-plus me-2"></i>Importer
            </button>
        </div>
    {% endif %}
    <div class="col">
        <form action="{{ path('user_view_project', {id: project.id}) }}" method="get">
            <div class="row g-2">
                <div class="col">
                    <label for="document_search" class="visually-hidden">
                        Rechercher dans les documents
                    </label>
                    <input id="document_search"
                           type="search"
                           name="q"
                           placeholder="Rechercher..."
                           class="form-control"
                           value="{{ search }}"/>
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi-search"></i>
                    </button>
                    <span class="badge rounded-circle bg-secondary"
                          data-bs-toggle="modal"
                          data-bs-target="#searchHelpModal">?</span>
                </div>
            </div>
        </form>
    </div>
    {% if canEdit %}
    <div class="col-auto">
        <button class="btn btn-primary"
                type="button"
                data-bs-toggle="modal"
                data-bs-target="#exportDocumentModal">
            <i class="bi-download me-2"></i>Exporter
        </button>
    </div>
    {% endif %}
</div>
