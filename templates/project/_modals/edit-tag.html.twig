                        <input id="renameTag_newName" type="text" name="name" class="form-control" required/>
                    </div>
                    <div class="mb-3">
                        <label for="renameTag_newDescription" class="form-label">Nouvelle description</label>
                        <textarea id="renameTag_newDescription" name="description" class="form-control"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Fermer</button>
                    <button type="submit" class="btn btn-primary">Sauver</button>
                </div>
            </form>
        </div>
    </div>
</div>