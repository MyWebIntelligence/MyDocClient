<div class="row g-2">
    <div class="col">
        <label for="document_search" class="visually-hidden">
            Rechercher dans les documents
        </label>
        <input id="document_search"
               type="search"
               name="q"
               placeholder="Rechercher..."
               class="form-control"
               data-url="{{ path('user_documents_async_search', {id: document.id}) }}"
               value="{{ search }}"/>
    </div>
    <div class="col-auto">
        <button id="asyncSearch"
                type="submit"
                class="btn btn-primary"
                data-url="{{ path('user_documents_async_search', {id: document.id}) }}">
            <i class="bi-search"></i>
        </button>
    </div>
</div>